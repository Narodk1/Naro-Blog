{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h1>Admin - Gestion des Posts</h1>
        <a href="{{ path('admin_post_new') }}" class="btn btn-primary mb-3">Ajouter un nouveau post</a>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Titre</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for post in posts %}
                    <tr>
                        <td>{{ post.id }}</td>
                        <td>{{ post.titre }}</td>
                        <td>
                            <a href="{{ path('admin_post_edit', {'id': post.id}) }}" class="btn btn-secondary btn-sm">Modifier</a>
                            <form action="{{ path('admin_post_delete', {'id': post.id}) }}" method="post" style="display:inline;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
                                <button class="btn btn-danger btn-sm">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
