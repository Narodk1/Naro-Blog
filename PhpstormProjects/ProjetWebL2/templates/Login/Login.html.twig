{% extends 'base.html.twig' %}

{% block title %}Naro Blog - Login{% endblock %}

{% block stylesheets %}
  {{ parent() }}
{% endblock %}


{% block body %}


  {% block header %}
    {{ parent() }}
  {% endblock %}
  <main id="main">
    <section id="login" class="login mb-5">
      <div class="container" data-aos="fade-up">

        <div class="row">
          <div class="col-lg-12 text-center mb-5">
            <h1 class="page-title">Login</h1>
          </div>
        </div>

        <div class="form mt-5">
          <form  method="post" role="form" class="php-email-form">
            <div class="row">
              <div class="form-group col-md-12">
                <input type="email" class="form-control" name="_username" id="email" placeholder="Your Email" required>
              </div>
            </div>
            <div class="row">
              <div class="form-group col-md-12">
                <input type="password" name="_password" class="form-control" id="password" placeholder="Your Password" required>
              </div>
            </div>
            <div class="my-3">
              <div class="loading">Loading</div>
              <div class="error-message"></div>
              <div class="sent-message">You are logged in successfully!</div>
            </div>
            <div class="text-center"><button type="submit">Login</button></div>
          </form>
        </div><!-- End Login Form -->
        <div class="text-center mt-3">
          <p>Vous n'avez pas de compte? <a href="{{ path('app_register') }}"><strong>Sign Up</strong></a></p>
        </div><!-- Sign Up Link -->
      </div>
    </section>

  </main><!-- End #main -->



  {% block footer %}
    {{ parent() }}
  {% endblock %}

{% endblock %}
