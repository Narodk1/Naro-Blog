{% extends 'base.html.twig' %}

{% block title %}Naro Blog - Login{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}




{% block body %}

    {% block header %}
        {{ parent() }}
    {% endblock %}
    <main id="main">
        <section id="login" class="login mb-5">
            <div class="container" data-aos="fade-up">
                <div class="row">
                    <div class="col-lg-12 text-center mb-5">
                        <h1 class="page-title">Login</h1>
                    </div>
                </div>
                <div class="form mt-5">
                    <form method="post" >
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        <div class="row">
                            <div class="form-group col-md-12">
                                <label for="email">Email</label>
                                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-12">
                                <label for="password">Password</label>
                                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                            </div>
                        </div>
                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                        <div class="my-3">
                            <div class="loading">Loading</div>
                            <div class="error-message"></div>
                            <div class="sent-message">You are logged in successfully!</div>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">


                    </form>
                </div><!-- End Login Form -->
                <div class="text-center mt-3">
                    <p>Vous n'avez pas de compte? <a href="{{ path('app_register') }}"><strong>Sign Up</strong></a></p>
                </div><!-- Sign Up Link -->
            </div>
        </section>
    </main><!-- End #main -->


    {% block footer %}
        {{ parent() }}
    {% endblock %}

{% endblock %}