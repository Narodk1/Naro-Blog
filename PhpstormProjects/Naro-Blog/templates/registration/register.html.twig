{% extends 'base.html.twig' %}

{% block title %}Naro Blog - Register{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {% block header %}
        {{ parent() }}
    {% endblock %}

    <main id="main">
        <section id="signup" class="signup mb-5">
            <div class="container" data-aos="fade-up">
                <div class="row">
                    <div class="col-lg-12 text-center mb-5">
                        <h1 class="page-title">Sign Up</h1>
                    </div>
                </div>
                <div class="form mt-5">
                    {{ form_errors(registrationForm) }}
                    {{ form_start(registrationForm) }}
                    <div class="row">
                        <div class="form-group col-md-6">
                            {{ form_row(registrationForm.email, { 'attr': {'class': 'form-control', 'placeholder': 'Your Email'} }) }}
                        </div>
                        <div class="form-group col-md-6">
                            {{ form_row(registrationForm.username, { 'attr': {'class': 'form-control', 'placeholder': 'Your Username'} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_row(registrationForm.Password, { 'attr': {'class': 'form-control', 'placeholder': 'Your Password'} }) }}
                    </div>
                    <div class="form-group form-check">
                        {{ form_row(registrationForm.AccepterLesConditions, { 'attr': {'class': 'form-check-input'} }) }}
                        <label class="form-check-label" for="{{ registrationForm.AccepterLesConditions.vars.id }}" style="display: none;">accepter les conditions</label>
                    </div>
                    <button type="submit" class="btn btn-primary">Register</button>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </section>
    </main>

    {% block footer %}
        {{ parent() }}
    {% endblock %}
{% endblock %}
